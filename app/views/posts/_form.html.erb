<%= nested_form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <%= f.fields_for :action do |action_form| %>
  <%= action_form.text_field :activity_id %>
  <%= action_form.text_field :entity_id %>
  <%= action_form.link_to_remove "Remove this task" %>
<% end %>
  <p><%= f.link_to_add "Add a action", :action %></p>

<%= f.file_field :attachment %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
